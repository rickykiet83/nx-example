{
  "name": "cart",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cart/src",
  "projectType": "application",
  "tags": ["type:app", "scope:cart"],
  "// targets": "to see all targets run: nx show project cart --web",
  "targets": {
    "copy-assets-dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node tools/scripts/copy-assets.ts dev"
      }
    },
    "copy-assets-dist": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node tools/scripts/copy-assets.ts dist"
      }
    },
    "build-prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx build cart && nx run cart:copy-assets-dist"
      }
    }
  },
  "implicitDependencies": ["shared-assets", "shared-styles"]
}
